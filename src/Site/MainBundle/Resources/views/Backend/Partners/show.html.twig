{% extends 'SiteMainBundle:Backend:layout.html.twig' %}

{% block content -%}
    <h1>{{ 'backend.partners.h1_show'|trans({}, 'menu') }}</h1>

    {{ form(delete_form) }}

    <table class="record_properties table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ 'backend.partners.position'|trans({}, 'menu') }}</th>
            <td>{{ entity.position }}</td>
        </tr>
        <tr>
            <th>{{ 'backend.partners.img'|trans({}, 'menu') }}</th>
            <td><a href="{{ asset(entity.webPath) }}" target="_blank"><img src="{{ image(entity.webPath).resize(150) }}" alt="{{ entity.name }}" width="150px"/></a></td>
        </tr>
        <tr>
            <th>{{ 'backend.partners.name'|trans({}, 'menu') }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'backend.partners.link'|trans({}, 'menu') }}</th>
            <td>{{ entity.link }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions nav nav-pills">
        <li>
            <a href="{{ path('backend_partners_index') }}">
                {{ 'backend.partners.back_to_list'|trans({}, 'menu') }}
            </a>
        </li>
        <li>
            <a href="{{ path('backend_partners_edit', { 'id': entity.id }) }}">
                {{ 'backend.edit'|trans({}, 'menu') }}
            </a>
        </li>
        <li>
            <a href="{{ path('backend_partners_new') }}">
                {{ 'backend.create'|trans({}, 'menu') }}
            </a>
        </li>
    </ul>
{% endblock %}
