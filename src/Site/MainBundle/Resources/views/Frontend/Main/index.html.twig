{% extends 'SiteMainBundle:Frontend:layout.html.twig' %}

{% block title %}{{ page.metaTitle }}{% endblock %}
{% block meta_description %}{{ page.metaDescription }}{% endblock %}
{% block meta_keywords %}{{ page.metaKeywords }}{% endblock %}

{% block content %}
    <!-- Main -->
    <section class="main">
        <div class="slider">
            {% for slider in sliders %}
                <div {% if slider.webPath|length > 0 %}style="background: url('{{ asset(slider.webPath) }}') center center no-repeat; background-size: cover;"{% endif %} {% if slider.video|length > 0 %}data-video='{{ asset('uploads/background/' ~ slider.video) }}' class="video"{% endif %}>
                    <div class="wrap-sticker">
                        <div class="sticker revealOnScroll" data-animation="fadeInRight">
                            <div class="wrap">
                                {{ slider.text|raw }}
                                <button class="btn btn-main">Заказать сайт</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
    </section>
    <!-- end Main -->

    <!-- Services start -->
    <div id="services" class="container services">
        <h2>Наши услуги</h2>
        <div class="wrap">
            <div class="box">
                {% for service in services %}
                    <figure>
                        <img src="{{ asset(service.webPath) }}" alt=""/>
                        <figcaption>
                            <h1>{{ service.title }}</h1>
                            <p>{{ service.description }}</p>
                            {#<a href="#" class="btn btn-default">Подробнее</a>#}
                        </figcaption>
                    </figure>
                {% endfor %}
            </div>
        </div>

    </div>
    <!-- Services end -->

    <!-- Our Work start -->
    <div id="our_work" class="container our-work">
        <h2>Наши работы</h2>

        <div class="box">
            {% for project in projects %}
                <figure>
                    <div class="fig-wrap">
                        <img class="lazy" src="{{ image(project.webPath).cropResize(400).jpeg(100) }}" alt=""/>
                        <figcaption>
                            <div class="wrap">
                                <h1>{{ project.title }}</h1>
                                <p>{{ project.description }}</p>
                                {% if project.price > 0 %}
                                <p>{{ project.price|number_format }} руб.</p>
                                {% endif %}
                                <a href="{{ project.site }}" target="_blank" class="btn btn-portfolio">Открыть</a>
                            </div>
                        </figcaption>
                    </div>
                </figure>
            {% endfor %}
        </div>

    </div>
    <!-- Our work end -->

    <!-- Contacts start -->
    <div id="contacts" class="container contacts">
        <h2>Напишите нам</h2>
        <p>А эта форма служит для связи с нами</p>
        <div class="wrap">
            <div class="col-50 first">
                <div class="flash-notice"></div>
                <form id="form-feedback" action="{{ path('frontend_feedback') }}" method="post" novalidate="novalidate">
                    {{ form_widget(form.name) }}
                    {{ form_widget(form.phone) }}
                    {{ form_widget(form.email) }}
                    {{ form_widget(form.message) }}
                    <button type="submit" class="btn btn-default">Отправить</button>
                    {{ form_rest(form) }}
                </form>
            </div><div class="col-50 last">
                <p>По всем вопросам можете обращаться</p>
                <p>по Email: <a href="mailto:info@lab-developers.com">info@lab-developers.com</a></p>
                <p>или по телефону: <a href="tel:+79657527048"><span>+7 (965) 752-70-48</span></p>
                <div class="social">
                    <a href="http://vk.com/lab_developers" class="vk" title="vk" target="_blank"></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Contacts end -->
{% endblock %}